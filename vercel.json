{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/server.js"
        },
        {
            "source": "/static/(.*)",
            "destination": "/frontend/static/$1"
        },
        {
            "source": "/favicon.ico",
            "destination": "/frontend/favicon.ico"
        },
        {
            "source": "/manifest.json",
            "destination": "/frontend/manifest.json"
        },
        {
            "source": "/logo192.png",
            "destination": "/frontend/logo192.png"
        },
        {
            "source": "/logo512.png",
            "destination": "/frontend/logo512.png"
        },
        {
            "source": "/robots.txt",
            "destination": "/frontend/robots.txt"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/index.html"
        }
    ]
}