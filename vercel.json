{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/index.js"
        },
        {
            "source": "/static/(.*)",
            "destination": "/frontend/static/$1"
        },
        {
            "source": "/favicon.ico",
            "destination": "/frontend/favicon.ico"
        },
        {
            "source": "/manifest.json",
            "destination": "/frontend/manifest.json"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/index.html"
        }
    ]
}